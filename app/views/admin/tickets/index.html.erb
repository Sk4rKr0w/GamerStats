<h1>All Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Message</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.subject %></td>
        <td><%= ticket.message %></td>
        <td><%= ticket.status %></td>
        <td>
          <%= link_to 'Show', admin_ticket_path(ticket) %> |
          <%= link_to 'Edit', edit_admin_ticket_path(ticket) %> |
          <%= button_to 'Delete', admin_ticket_path(ticket), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Dashboard', admin_dashboard_path %>
