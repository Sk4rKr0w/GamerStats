<div class="container">
  <h1>Champion Ratings</h1>
  <%= form_with url: champion_masteries_path, method: :get, local: true do %>
    <div class="form-group">
      <label for="riot_id">Riot ID:</label>
      <input type="text" class="form-control" id="riot_id" name="riot_id" placeholder="Enter your Riot ID" required>
    </div>
    <div class="form-group">
      <label for="tagline">Tagline:</label>
      <input type="text" class="form-control" id="tagline" name="tagline" placeholder="Enter your tagline" required>
    </div>
    <button type="submit" class="btn btn-primary">Show</button>
  <% end %>
</div> 
