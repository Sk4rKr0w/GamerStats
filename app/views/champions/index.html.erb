<h1>Champions Rating</h1>

<%= form_with url: champions_path(:id), method: :get, local: true do %>
  <div class="form-group">
    <%= label_tag :champion, "Select Champion:" %>
    <%= select_tag :id, options_for_select(@champions.map { |champion| [champion["name"], champion["id"]] }), prompt: "Choose a champion" %>
  </div>
  <%= submit_tag "Show Rating", class: "btn btn-primary" %>
<% end %>