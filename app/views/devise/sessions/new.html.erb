<%= stylesheet_link_tag 'users/sessions' %>

<div class="login-section" id="login-section">
  <div class="login-north-container">
    <h1>Login</h1>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-mid-container' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="login-mid-north-container">
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'e.g. MarcoRossi@gmail.com' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <%= link_to "Hai dimenticato la password?", new_password_path(resource_name), class: 'forgot-password-link' %>
    </div>

    <div class="login-mid-south-container">

      <!-- INIZIO PARTE PROBLEMATICA -->
      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= form_with url: omniauth_authorize_path(resource_name, provider), method: :post, data: { turbo: "false" }, class: 'oauth-form' do |f| %>
            <%= f.submit "Login", type: "image", src: url_for("/assets/google_sign_in/web_dark_rd_SI@1x.png"), class: 'oauth-button' %>
          <% end %>
        <% end %>
      <% end %>
      <!-- FINE PARTE PROBLEMATICA -->

      <%= f.submit "Sign In" %>
      <%= link_to "Non hai un account? Registrati!", new_user_registration_path %>
    </div>
  <% end %>

  <div class="devise-links">
    <%- if controller_name != 'sessions' %>
      <div class="links">
        <%= link_to "Log in", new_session_path(resource_name) %><br />
        <%= link_to "Sign up", new_registration_path(resource_name) if devise_mapping.registerable? && controller_name != 'registrations' %><br />
        <%= link_to "Forgot your password?", new_password_path(resource_name) if devise_mapping.recoverable? && controller_name != 'passwords' %><br />
      </div>
    <% end %>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
    <% end %>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
    <% end %>
  </div>
</div>
