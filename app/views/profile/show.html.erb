<h1>User Profile</h1>

<h2>Player Data</h2>
<% if @player_data %>
  <p>Game Name: <%= @player_data['gameName'] %></p>
  <p>Tag Line: <%= @player_data['tagLine'] %></p>
<% else %>
  <p>No player data available.</p>
<% end %>

<h2>Summoner Data</h2>
<% if @summoner_data %>
  <p>Summoner Name: <%= @summoner_data['name'] %></p>
  <p>Level: <%= @summoner_data['summonerLevel'] %></p>
  <p><img src="<%= @summoner_data['profileIconUrl'] %>" alt="Profile Icon"></p>
<% else %>
  <p>No summoner data available.</p>
<% end %>

<h2>Rank Data</h2>
<% if @rank_data.any? %>
  <% @rank_data.each do |rank| %>
    <p>Queue Type: <%= rank['queueType'] %></p>
    <p>Tier: <%= rank['tier'] %></p>
    <p>Rank: <%= rank['rank'] %></p>
    <p>Wins: <%= rank['wins'] %></p>
    <p>Losses: <%= rank['losses'] %></p>
  <% end %>
<% else %>
  <p>No rank data available.</p>
<% end %>

<h2>Match History</h2>
<% if @matches.any? %>
  <ul>
    <% @matches.each do |match| %>
      <li>
        <p>Match ID: <%= match[:match_id] %></p>
        <p>Score: <%= match[:score] %></p>
        <p>Duration: <%= match[:duration] %> seconds</p>
        <p>Result: <%= match[:win] %></p>
        <p>Champion: <%= match[:champion_name] %></p>
      </li>
    <% end %>
  </ul>
  <p>Win Rate: <%= @win_rate %>%</p>
<% else %>
  <p>No match history available.</p>
<% end %>
